<?xml version="1.0" encoding="UTF-8"?>
<phpdoc>
    <title>www.unistra.fr/formations/</title>
    <parser>
        <target>docs/api</target>
        <markers>
            <item>TODO</item>
            <item>FIXME</item>
        </markers>
        <extensions>
            <extension>php</extension>
        </extensions>
    </parser>
    <transformer>
        <target>docs/api</target>
    </transformer>
    <logging>
        <level>warn</level>
        <paths>
            <default>{APP_ROOT}/data/log/{DATE}.log</default>
            <errors>{APP_ROOT}/data/log/{DATE}.errors</errors>
        </paths>
    </logging>
    <transformations>
        <template name="clean"/>
    </transformations>
    <files>
        <directory>src</directory>
        <ignore>test*</ignore>
        <ignore>Test*</ignore>
        <ignore>*Test*</ignore>
    </files>
</phpdoc>
